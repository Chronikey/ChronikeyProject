<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create New Event | Event Planner</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
<link rel="stylesheet" href="/upload.css">
  </head>
  <body>
    <div class="container">
      <header class="page-header">
        <h1>Create New Event</h1>
        <p>Fill in the details and invite people to your event</p>
      </header>

      <div class="EventMain">
        <div class="search-section">
          <div class="search-header">
            <h2>Invite People</h2>
          </div>

          <div class="search-box">
            <i class="fas fa-search search-icon"></i>
            <input
              type="search"
              class="search-input"
              name="SearchBar"
              id="SearchBar"
              placeholder="Search for people to invite..."
            />
          </div>
          <h4 style="color: red;" id="Invited"></h4>
          <!-- Search Results List  -->
          <div class="SearchResults" id="SearchResults">

          </div>
          <div class="Nothing" id="nothing">
            <img
              width="200"
              src="/avatar-thinking-svgrepo-com (1).svg"
              alt=""
            />
            <h2>No user found!</h2>
          </div>

          <!-- Invited Users -->
          <div class="invited-users">
            <div class="invited-header">
              <h3>Invited Guests</h3>
              <span class="invited-count"
                ><span id="invited-count"></span>/150</span
              >
            </div>
            <div class="invited-list">
              <ul class="user-list" id="userList">
                <!-- Users will appear here when added -->
              </ul>

              <div class="empty-state" id="emptyState">
                <i class="fas fa-user-friends"></i>
                <h2>No guests invited yet</h2>
                <p>Search for people above to add them to your event</p>
              </div>
            </div>
          </div>
        </div>
        <form class="event-form" id="event-form">
          <div class="form-group">
            <h3>Event Name</h3>
            <input
              type="text"
              class="form-control"
              name="EventName"
              id="EventName"
              placeholder="Enter event name"
              required
            />
          </div>

          <div class="form-group">
            <h3>Who can the pics In this repo?</h3>
            <select
            name="repo"
              style="
                background-color: #000000;
                color: white;
                width: 100%;
                height: 40px;
                border-radius: 10px;
              "
              class="form-select"
              aria-label="Default select example"
            >
              <option selected>Select...</option>
              <option value="Everyone">Every Invited person</option>
              <option value="OnlyMe">Only me</option>
            </select>
          </div>

          <div class="form-group">
            <h3>Event Description</h3>
            <textarea
              class="form-control"
              name="EventDescription"
              id="EventDescription"
              rows="3"
              placeholder="What's this event about?"
            ></textarea>
          </div>
          <div class="form-group">
            <h3>Starting Date & Time</h3>
            <input
              type="datetime-local"
              class="form-control"
              name="start"
              id="start"
              required
            />
          </div>

          <div class="form-group">
            <h3>Ending Date & Time</h3>
            <input
              type="datetime-local"
              class="form-control"
              name="end"
              id="end"
              required
            />
          </div>
          <h4 style="color: red;" id="dates"></h4>

          <button type="submit" class="btn btn-primary btn-block" onclick="SubmitForm(event)">
            <i class="fas fa-calendar-plus"></i> Create Event
          </button>
        </form>
      </div>
    </div>
    <script src="/script.js"></script>
    <script src="/event.js"></script>
  </body>
</html>
